{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": false,
        "sourceMap": false,
        "lib": [
            "es6"
        ],
        "allowJs": false,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules/**",
        "**/*.spec.ts"
    ]
}